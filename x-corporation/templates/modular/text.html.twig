{% block content %}

{% if page.header.background_image != '' %}
    {% set background_html = 'style="background-image: url(' ~ page.media.images[page.header.background_image].url ~ ');"' %}
{% else %}
    {% set  background_html = "" %}
{% endif %}
<section class="text-page-title"{{ background_html }}>
    <div class="container text-center">
        <h2>{{ page.title }}</h2>
    </div>
</section>

<section class="text-page ptb-50">
    <div class="container">
        <div class="row">
            <p>{{ content|markdown }}</p>
        </div>
    </div>
</section>
{% endblock %}
